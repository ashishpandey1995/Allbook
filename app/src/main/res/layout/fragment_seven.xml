<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout

        android:id="@+id/toplinear"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageV1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/happy"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="We are eager to solve your issue and help you."
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="#ffa000"
                android:id="@+id/textV1"
                />
        </LinearLayout>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#bdbdbd"
            android:enabled="false"
            android:id="@+id/but"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Drag prof icon over front icon to perform call,sms or email. "
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:textColor="#757575"
            android:id="@+id/textV2"
            />


    <LinearLayout

        android:id="@+id/toplinear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

       <LinearLayout

        android:id="@+id/secondlinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="55dp"
            android:layout_marginLeft="20dp"
            android:layout_height="55dp"
            android:src="@drawable/iconn"
            />

       </LinearLayout>



        <LinearLayout

            android:id="@+id/thirdlinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="160dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="55dp"
                android:layout_marginLeft="10dp"
                android:layout_height="55dp"
                android:src="@android:drawable/ic_menu_call"
                />
            <ImageView
                android:id="@+id/image2"
                android:layout_width="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_height="55dp"
                android:src="@android:drawable/ic_menu_send"
                />
            <ImageView
                android:id="@+id/image3"
                android:layout_width="55dp"
                android:layout_marginLeft="10dp"
                android:layout_height="55dp"
                android:layout_marginTop="40dp"
                android:src="@android:drawable/ic_dialog_email"
                />


        </LinearLayout>


    </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="0dp"
            android:background="#bdbdbd"
            android:enabled="false"
            android:id="@+id/but1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageV5"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/prrrof"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="AllBook"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="#ffa000"
                android:id="@+id/textV5"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Indian Institute Of Information Technology Gwalior(MP)-474015"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:textSize="13dp"
                    android:textColor="#757575"
                    android:id="@+id/textV6"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="allbookecommerce@gmail.com"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:textSize="13dp"
                    android:textColor="#757575"
                    android:id="@+id/textV7"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="+91 8120054507"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:textSize="13dp"
                    android:textColor="#757575"
                    android:id="@+id/textV8"
                    />


                </LinearLayout>
        </LinearLayout>



    </LinearLayout>


</FrameLayout>