<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView23"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/happy"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sell your product just in one step."
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="#ffa000"
            android:id="@+id/textView27"
            />
    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#bdbdbd"
        android:enabled="false"
        android:id="@+id/button6"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imagev3"
            android:background="@android:drawable/ic_menu_camera"
            />

    </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal">




                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:background="@drawable/booksex2"
                    android:id="@+id/imageView18"
                    android:layout_marginLeft="0dp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:background="@drawable/booksex1"
                    android:id="@+id/imageView19"
                    android:layout_marginLeft="20dp"
                    />



                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:background="@drawable/booksex2"
                    android:id="@+id/imageView25"
                    android:layout_marginLeft="20dp"
                    />

            </LinearLayout>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#bdbdbd"
                    android:enabled="false"
                    android:id="@+id/button7"
                    />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imagev5"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/prrrof"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:hint="name"
                android:ems="10"
                android:id="@+id/editText7"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imagev6"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/phone"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="phone"
                android:hint="phone"
                android:ems="10"
                android:id="@+id/editText8"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imagev7"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/ic_dialog_email"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textPostalAddress"
                android:hint="address"
                android:ems="10"
                android:id="@+id/editText9"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imagev9"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/pro"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:hint="product name"
                    android:ems="10"
                    android:id="@+id/editText11"
                    android:layout_marginLeft="10dp"/>


            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imagev8"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rs"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="number"
                android:hint="price"
                android:ems="10"
                android:id="@+id/editText10"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/happy"
            android:id="@+id/imageButton8"
            />

        </LinearLayout>

</LinearLayout>

    </ScrollView>
    </LinearLayout>
</FrameLayout>